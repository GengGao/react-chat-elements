{
  "compilerOptions": {
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "target": "es5",
    "paths": {
      "*": ["../types/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "**/__tests__/*",
    "**/*.stories.tsx"
  ],
  "include": ["src"]
}
